<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background">

        <!-- 상단 마진 -->
        <View
            android:id="@+id/view_partner_home_mg1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_percent="0.055" />

        <!-- 로고 -->
        <LinearLayout
            android:id="@+id/partner_home_linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/view_partner_home_mg1"
            app:layout_constraintHeight_percent="0.0214">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="24" />

            <ImageView
                android:id="@+id/iv_partner_home_main_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="76"
                android:src="@drawable/ic_assu_main_logo" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="293" />
        </LinearLayout>

        <!-- 이름 -->
        <View
            android:id="@+id/view_partner_home_mg2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/partner_home_linear_layout_1"
            app:layout_constraintHeight_percent="0.0285" />

        <TextView
            android:id="@+id/tv_partner_home_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="역전할머니맥주 숭실대점"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/assu_font_main"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/view_partner_home_mg2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.88" />

        <View
            android:id="@+id/view_partner_home_mg3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_partner_home_name"
            app:layout_constraintHeight_percent="0.042" />

        <!-- 콘텐츠 묶음 -->
        <LinearLayout
            android:id="@+id/ll_partner_home_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/view_partner_home_mg3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="제휴업체 목록"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/assu_font_main"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_partner_home_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체보기"
                    android:clickable="true"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/assu_font_sub"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- 제휴업체 항목 2개 (item_partner_list.xml 포함) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/partner_home_list_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_list_item"
                android:paddingVertical="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!-- 매장 이름 -->
                    <TextView
                        android:id="@+id/tv_admin_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숭실대학교 총학생회"
                        android:textSize="17sp"
                        android:textColor="@color/assu_font_main"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 제휴내용 라벨 -->
                    <TextView
                        android:id="@+id/tv_label_benefit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_home_list_label"
                        android:text="제휴내용"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/tv_admin_name1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 제휴내용 설명 -->
                    <TextView
                        android:id="@+id/tv_benefit_description1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="100,000원 이상 주문시 안주 1개 서비스"
                        android:textColor="@color/assu_font_sub"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        app:layout_constraintTop_toTopOf="@id/tv_label_benefit1"
                        app:layout_constraintBottom_toBottomOf="@id/tv_label_benefit1"
                        app:layout_constraintStart_toEndOf="@id/tv_label_benefit1"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- 제휴기간 라벨 -->
                    <TextView
                        android:id="@+id/tv_label_period1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_home_list_label"
                        android:text="제휴기간"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/tv_label_benefit1"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 제휴기간 날짜 -->
                    <TextView
                        android:id="@+id/tv_benefit_period1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-03-15  ~  2025-06-15"
                        android:textColor="@color/assu_font_sub"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        app:layout_constraintTop_toTopOf="@id/tv_label_period1"
                        app:layout_constraintBottom_toBottomOf="@id/tv_label_period1"
                        app:layout_constraintStart_toEndOf="@id/tv_label_period1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_partner_home_mg4"
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/partner_home_list_item2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_home_list_item"
                android:paddingVertical="20dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!-- 매장 이름 -->
                    <TextView
                        android:id="@+id/tv_market_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="숭실대학교 IT대학 학생회"
                        android:textSize="17sp"
                        android:textColor="@color/assu_font_main"
                        android:fontFamily="@font/pretendard_medium"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 제휴내용 라벨 -->
                    <TextView
                        android:id="@+id/tv_label_benefit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_home_list_label"
                        android:text="제휴내용"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/tv_market_name2"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 제휴내용 설명 -->
                    <TextView
                        android:id="@+id/tv_benefit_description2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="100,000원 이상 주문시 안주 1개 서비스"
                        android:textColor="@color/assu_font_sub"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        app:layout_constraintTop_toTopOf="@id/tv_label_benefit2"
                        app:layout_constraintBottom_toBottomOf="@id/tv_label_benefit2"
                        app:layout_constraintStart_toEndOf="@id/tv_label_benefit2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- 제휴기간 라벨 -->
                    <TextView
                        android:id="@+id/tv_label_period2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/bg_home_list_label"
                        android:text="제휴기간"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/pretendard_medium"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toBottomOf="@id/tv_label_benefit2"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 제휴기간 날짜 -->
                    <TextView
                        android:id="@+id/tv_benefit_period2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-03-15  ~  2025-06-15"
                        android:textColor="@color/assu_font_sub"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        app:layout_constraintTop_toTopOf="@id/tv_label_period2"
                        app:layout_constraintBottom_toBottomOf="@id/tv_label_period2"
                        app:layout_constraintStart_toEndOf="@id/tv_label_period2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 추천 헤더 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:text="🔍 제휴단체 추천"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/assu_font_main"
                android:textSize="16sp" />

            <!-- 추천 카드 -->

            <!-- 추천 카드 그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <!-- 첫 번째 카드 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_recommend_card"
                        android:padding="22dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="숭실대학교\n경영학부 학생회"
                            android:textSize="17sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:textColor="@color/assu_font_main" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울 동작구 사당로 36-1\n서경예술"
                            android:textSize="13sp"
                            android:textColor="@color/assu_font_sub"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/pretendard_regular" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_recommend_inquiry"
                            android:clickable="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="문의하기"
                                android:textColor="@android:color/white"
                                android:textSize="11sp"
                                android:fontFamily="@font/pretendard_regular" />
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- 두 번째 카드 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardUseCompatPadding="false"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_recommend_card"
                        android:padding="22dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="숭실대학교\n스포츠학부 학생회"
                            android:textSize="17sp"
                            android:fontFamily="@font/pretendard_medium"
                            android:textColor="@color/assu_font_main" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="서울 동작구 사당로 36-1\n서경예술"
                            android:textSize="13sp"
                            android:textColor="@color/assu_font_sub"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/pretendard_regular" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/btn_recommend_inquiry"
                            android:clickable="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="문의하기"
                                android:textColor="@android:color/white"
                                android:textSize="11sp"
                                android:fontFamily="@font/pretendard_regular" />
                        </FrameLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>