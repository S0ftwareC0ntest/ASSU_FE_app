<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="99dp">

    <TextView
        android:id="@+id/tv_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="인생맥주 숭실대점"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/assu_font_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_date_time"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="2025-03-15 18:36"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/assu_font_sub"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_place_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="인쌩맥주에서 음료 한 병을 제공받았어요!"
        android:textSize="13sp"
        android:fontFamily="@font/pretendard_regular"
        android:textColor="@color/assu_font_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_write_review"/>

    <TextView
        android:id="@+id/btn_write_review"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:background="@drawable/btn_write_review"
        android:text="리뷰 작성하기"
        android:textSize="11sp"
        android:textColor="@color/assu_main"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_location_search_result_item_line"
        android:layout_width="353dp"
        android:layout_height="1dp"
        android:background="#DCDFDF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>