<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/assu_background"
        android:padding="24dp">

        <!-- 상단 타이틀 -->
        <TextView
            android:id="@+id/tv_dashboard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="역전할머니맥주 숭실대점"
            android:textColor="@color/assu_font_main"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginTop="41dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_dashboard_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴 사용자가 얼마나 많을까요?"
            android:textColor="@color/assu_font_main"
            android:textSize="22sp"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp" />

        <!-- 메뉴별 분석 그래프 제목 -->
        <TextView
            android:id="@+id/tv_dashboard_menu_graph_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제휴 이용현황"
            android:textColor="@color/assu_font_main"
            android:textSize="16sp"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard_question"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- 그래프 여백 -->
        <View
            android:id="@+id/view_menu_graph_placeholder"
            android:layout_width="310dp"
            android:layout_height="138dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard_menu_graph_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 확인 버튼 -->
        <TextView
            android:id="@+id/btn_view_contract"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:text="제휴 계약서 확인하기"
            android:clickable="true"
            android:gravity="center"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_basic_selected"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toBottomOf="@id/view_menu_graph_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 고객 추이 그래프 제목 -->
        <TextView
            android:id="@+id/tv_dashboard_client_graph_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고객 추이"
            android:textColor="@color/assu_font_main"
            android:textSize="16sp"
            android:layout_marginStart="7dp"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@id/btn_view_contract"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- 그래프 여백 -->
        <View
            android:id="@+id/view_client_graph_placeholder"
            android:layout_width="310dp"
            android:layout_height="138dp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/tv_dashboard_client_graph_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 분석 + 예측 문구 영역 -->
        <LinearLayout
            android:id="@+id/ll_client_dashboard_prediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="25dp"
            android:background="@color/assu_box"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/view_client_graph_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 분석 문구 -->
            <TextView
                android:id="@+id/tv_dashboard_client_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제휴 이용자를 통해\n매출의 14%를 기록하고 있어요"
                android:textColor="@color/assu_font_main"
                android:textSize="16sp"
                android:gravity="center"
                android:fontFamily="@font/pretendard_medium" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
