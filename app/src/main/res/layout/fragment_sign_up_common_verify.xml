<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.signup.SignUpCommonVerifyFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 상단 회색 배경 -->
        <ImageView
            android:id="@+id/iv_signup_progress_bg"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_signup_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 파란 진행 바 -->
        <ImageView
            android:id="@+id/iv_signup_progress_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_signup_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.20"
            android:scaleType="fitXY"/>

        <!-- 본인인증 안내 텍스트 -->
        <TextView
            android:id="@+id/tv_verify_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="본인인증을\n진행해주세요!"
            android:layout_marginStart="24dp"
            android:textColor="@color/assu_font_main"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/iv_signup_progress_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_margin="24dp" />

        <!-- 전화번호 라벨 -->
        <TextView
            android:id="@+id/tv_user_verify_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="63dp"
            android:text="전화번호"
            android:textSize="13sp"
            android:textColor="@color/assu_font_sub"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_verify_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintStart_margin="24dp" />

        <!-- 전화번호 입력 필드 받기 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_verify_phone"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_signup_input_bar"
            app:layout_constraintTop_toBottomOf="@id/tv_user_verify_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_user_verify_phone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:hint="전화번호 입력 (숫자만)"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:textColorHint="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_user_verify_request"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 아이콘 + 인증번호 텍스트 정렬용 LinearLayout -->
            <LinearLayout
                android:id="@+id/ll_user_verify_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_user_verify_check_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_signup_verified"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_user_verify_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="인증번호 받기"
                    android:textColor="@color/assu_main"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 인증번호 받기 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_user_verify_code"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_signup_input_bar"
            app:layout_constraintTop_toBottomOf="@id/cl_user_verify_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_user_verify_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:hint="인증번호 입력"
                android:inputType="phone"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:textColorHint="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/ll_user_verify_code"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <!-- 타이머 + 아이콘 수평 정렬 -->
            <LinearLayout
                android:id="@+id/ll_user_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_user_verify_code_check_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_signup_verified"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_user_verify_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:00"
                    android:textColor="@color/assu_main"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_medium"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/cl_user_verify_code"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_info_circle" />

            <TextView
                android:id="@+id/tv_question_code_is_not_coming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인증번호가 오지 않았나요?"
                android:textSize="13sp"
                android:textColor="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_medium" />
        </LinearLayout>

        <!-- 인증 완료 버튼 (하단 고정) -->
        <ImageButton
            android:id="@+id/btn_user_verify_complete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_basic_unselected"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_user_verify_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="57dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="인증 완료"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
