<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <ImageView
            android:id="@+id/iv_location_item_bg"
            android:layout_width="0dp"
            android:layout_height="126dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/bg_location_item" />

        <View
            android:id="@+id/view_location_item_mg1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="11:126"
            app:layout_constraintStart_toStartOf="@id/iv_location_item_bg"
            app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_location_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintWidth_percent="0.1917"
            app:cardCornerRadius="7dp"
            app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"
            app:layout_constraintStart_toEndOf="@id/view_location_item_mg1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_location_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_location_beer"/>
        </androidx.cardview.widget.CardView>

        <View
            android:id="@+id/view_location_item_mg3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"
            app:layout_constraintDimensionRatio="20:126"
            app:layout_constraintStart_toEndOf="@id/cv_location_item"
            app:layout_constraintTop_toTopOf="@id/iv_location_item_bg" />

        <LinearLayout
            android:id="@+id/ll_location_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"
            app:layout_constraintStart_toEndOf="@id/view_location_item_mg3">

            <TextView
                android:id="@+id/tv_location_item_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="역전할머니 숭실대점"
                android:textSize="17sp"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/assu_font_main"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_location_item_capsule"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_location_capsule"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_location_item_content"
                    android:layout_marginEnd="6dp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제휴중"
                    android:textSize="11sp"
                    android:textColor="@color/assu_font_sub"
                    app:layout_constraintTop_toTopOf="@id/tv_location_item_content"
                    app:layout_constraintBottom_toBottomOf="@id/tv_location_item_content"
                    app:layout_constraintStart_toStartOf="@id/iv_location_item_capsule"
                    app:layout_constraintEnd_toEndOf="@id/iv_location_item_capsule"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_location_item_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="서울 동작구 사당로 36-1 서정캐슬"
                    android:textSize="13sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/assu_font_sub"
                    app:layout_constraintStart_toEndOf="@id/iv_location_item_capsule"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/iv_location_item_contact"
                android:layout_width="235dp"
                android:layout_height="31dp"
                android:text="문의하기"
                android:textColor="@color/assu_font_white"
                android:textSize="11sp"
                android:fontFamily="@font/pretendard_regular"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@drawable/btn_location_contact"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <View
            android:id="@+id/view_location_item_mg2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="11:122"
            app:layout_constraintEnd_toEndOf="@id/iv_location_item_bg"
            app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
            app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>