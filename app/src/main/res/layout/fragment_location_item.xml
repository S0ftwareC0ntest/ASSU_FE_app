<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_location_item_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_location_item"
        app:layout_constraintDimensionRatio="365:122" />

    <View
        android:id="@+id/view_location_item_mg1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="11:122"
        app:layout_constraintStart_toStartOf="@id/iv_location_item_bg"
        app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_location_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.1917"
        app:cardCornerRadius="7dp"
        app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"
        app:layout_constraintStart_toEndOf="@id/view_location_item_mg1">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_location_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/assu_main"/>
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/view_location_item_mg3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="11:122"
        app:layout_constraintStart_toEndOf="@id/cv_location_item"
        app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"/>

    <LinearLayout
        android:id="@+id/ll_location_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"
        app:layout_constraintStart_toEndOf="@id/view_location_item_mg3">

        <TextView
            android:id="@+id/tv_location_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="역전할머니 숭실대점"
            android:textSize="17sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_main"/>

        <TextView
            android:id="@+id/tv_location_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4인 이상 식사시, 음료 제공"
            android:textSize="13sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/assu_font_sub"/>

        <View
            android:id="@+id/view_location_item_mg4"
            android:layout_width="match_parent"
            android:layout_height="8dp"/>

        <LinearLayout
            android:id="@+id/ll_location_item_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_location_item_star1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_item_star_selected"/>

            <ImageView
                android:id="@+id/iv_location_item_star2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_item_star_selected"/>

            <ImageView
                android:id="@+id/iv_location_item_star3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_item_star_selected"/>

            <ImageView
                android:id="@+id/iv_location_item_star4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_item_star_unselected"/>

            <ImageView
                android:id="@+id/iv_location_item_star5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_location_item_star_unselected"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_location_item_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_arrow_right"
        app:layout_constraintEnd_toStartOf="@id/view_location_item_mg2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_location_item_mg2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="11:122"
        app:layout_constraintEnd_toEndOf="@id/iv_location_item_bg"
        app:layout_constraintTop_toTopOf="@id/iv_location_item_bg"
        app:layout_constraintBottom_toBottomOf="@id/iv_location_item_bg"/>


</androidx.constraintlayout.widget.ConstraintLayout>