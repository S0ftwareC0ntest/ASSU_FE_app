<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyPartnershipDetailsFragment">
        <LinearLayout
            android:id="@+id/layout_my_partnership_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="9dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/iv_my_partnership_back_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_arrow"/>

            <TextView
                android:id="@+id/tv_my_partnership_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 제휴 내역"
                android:fontFamily="@font/pretendard_semibold"
                android:textSize="20sp"
                android:textColor="@color/assu_font_main"/>
        </LinearLayout>
        
        <View
            android:id="@+id/view_my_partnership_mg1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@id/layout_my_partnership_title"/>

        <TextView
            android:id="@+id/tv_my_partnership_current_situation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스탬프 적립 현황"
            android:textColor="@color/assu_font_main"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintTop_toBottomOf="@id/view_my_partnership_mg1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="31dp"/>


        <View
            android:id="@+id/view_my_partnership_mg2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_partnership_current_situation"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_my_partnership_stamp_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintWidth_percent="0.8778625954"
            app:layout_constraintHeight_percent="0.1714285714"
            app:layout_constraintTop_toBottomOf="@id/view_my_partnership_mg2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ic_home_basic_box">

            <!-- ① 실제 스탬프 뷰들: 크기는 고정 40dp×40dp -->
            <ImageView
                android:id="@+id/iv_home_stamp1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp8"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <ImageView
                android:id="@+id/iv_home_stamp10"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                android:src="@drawable/ic_home_stamp" />

            <!-- ② Flow helper:
                   - maxElementsWrap="5" → 한 줄에 5개씩
                   - wrapMode="chain"   → 체인 모드(스프레드)
                   - horizontalGap, verticalGap → 뷰 사이 간격
                   - horizontalStyle="spread" → 좌우 여백 포함 모두 동일 간격 배분
            -->
            <androidx.constraintlayout.helper.widget.Flow
                android:id="@+id/flow_stamps"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:flow_wrapMode="chain"
                app:flow_maxElementsWrap="5"

                app:flow_horizontalGap="0dp"
                app:flow_verticalGap="0dp"

                app:flow_horizontalStyle="spread"
                app:flow_verticalStyle="spread"

                app:constraint_referenced_ids="
          iv_home_stamp1,
          iv_home_stamp2,
          iv_home_stamp3,
          iv_home_stamp4,
          iv_home_stamp5,
          iv_home_stamp6,
          iv_home_stamp7,
          iv_home_stamp8,
          iv_home_stamp9,
          iv_home_stamp10"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:id="@+id/view_my_partnership_mg3"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout_my_partnership_stamp_box"/>

        <LinearLayout
            android:id="@+id/layout_my_partnership_prize_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_my_partnership_mg3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_my_partnership_prize_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_circle"
                android:layout_marginStart="7dp"/>

            <TextView
                android:id="@+id/tv_my_partnership_prize_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="스탬프 10개 적립 시 기프티콘이 지급됩니다!"
                android:textColor="@color/assu_font_sub"
                android:textSize="11sp"
                android:fontFamily="@font/pretendard_regular"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <View
            android:id="@+id/view_my_partnership_mg4"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout_my_partnership_prize_info"/>

        <ImageView
            android:id="@+id/iv_my_partnership_simple_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:src="@drawable/ic_home_basic_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_my_partnership_mg4"/>


        <View
            android:id="@+id/view_my_partnership_mg5"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintTop_toBottomOf="@id/iv_my_partnership_simple_line"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/view_my_partnership_mg5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_my_partnership_review_list"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>