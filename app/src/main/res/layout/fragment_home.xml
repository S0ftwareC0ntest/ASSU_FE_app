<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_home_mg1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.09507042254"/>


    <LinearLayout
        android:id="@+id/home_linear_layout_1"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.01976284585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_home_mg1">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"/>

        <ImageView
            android:id="@+id/iv_home_main_logo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_assu_main_logo"
            android:layout_weight="76"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="293"/>
    </LinearLayout>



    <View
        android:id="@+id/view_home_mg2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_linear_layout_1"
        app:layout_constraintHeight_percent="0.03162055336"/>


    <TextView
        android:id="@+id/tv_home_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="안녕하세요, 김숭실님!"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/assu_font_main"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@id/view_home_mg2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view_home_mg3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_1"
        app:layout_constraintHeight_percent="0.01581027668"/>

    <TextView
        android:id="@+id/tv_home_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오늘은 어떤 할인을 받을까요?"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="22sp"
        android:textColor="@color/assu_font_main"
        app:layout_constraintWidth_percent="0.8778625954"
        app:layout_constraintTop_toBottomOf="@id/view_home_mg3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="hi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="600dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>

