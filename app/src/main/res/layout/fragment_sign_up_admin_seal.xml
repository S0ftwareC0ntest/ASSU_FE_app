<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.admin.signup.SignUpAdminSealFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 상단 회색 배경 -->
        <ImageView
            android:id="@+id/iv_signup_progress_bg"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_signup_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 파란 진행 바 -->
        <ImageView
            android:id="@+id/iv_signup_progress_bar"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_signup_progress_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.80"
            android:scaleType="fitXY"/>

        <!-- 단체의 인감 등록 텍스트 -->
        <TextView
            android:id="@+id/tv_admin_seal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="마지막이에요!\n단체의 인감을 등록해주세요"
            android:layout_marginStart="24dp"
            android:textColor="@color/assu_font_main"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/iv_signup_progress_bar"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 인감 사진 받기 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_admin_seal"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginTop="63dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_signup_input_bar"
            app:layout_constraintTop_toBottomOf="@id/tv_admin_seal_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/et_admin_seal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:hint="갤러리에서 사진업로드"
                android:focusable="false"
                android:cursorVisible="false"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:textColor="@color/assu_font_main"
                android:textColorHint="@color/assu_font_sub"
                android:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/btn_upload"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_signup_upload"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- 인증 완료 버튼 (하단 고정) -->
        <ImageButton
            android:id="@+id/btn_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="46dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_basic_unselected"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="57dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="완료"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/pretendard_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
